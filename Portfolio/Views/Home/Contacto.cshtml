@{
    ViewData["Title"] = "Contacto";
}

<h1 class="text-center">Formulario de Contacto</h1>

<div class="d-flex justify-content-center">
    <form asp-controller="Home" asp-action="Contacto" class="w-50">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Miguel" required />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="miguel@correo.com" required />
        </div>

        <div class="mb-3">
            <label for="mensaje" class="form-label">Mensaje</label>
            <textarea class="form-control" id="mensaje" name="mensaje" rows="3" placeholder="Comenta lo que quieras..."></textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>