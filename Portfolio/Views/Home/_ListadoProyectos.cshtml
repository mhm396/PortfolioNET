@model IEnumerable<Proyecto>

@if (Model is not null)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-img-container">
                            <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen Proyecto">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Ver Proyecto</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
}

<style>
    .card-img-container {
        height: 200px;
        width: 100%;
        overflow: hidden; /* Oculta cualquier parte de la imagen que exceda el contenedor */
    }

        .card-img-container img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
</style>

